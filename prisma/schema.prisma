generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  fullName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clients   Client[] @relation("CoachClients")
}

model Client {
  id        Int             @id @default(autoincrement())
  name      String
  email     String          @unique
  coachId   Int?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  coach     User?           @relation("CoachClients", fields: [coachId], references: [id])
  nutrition NutritionPlan[]
  programs  Program[]
}

model Program {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  clientId    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  client      Client?  @relation(fields: [clientId], references: [id])
}

model NutritionPlan {
  id        Int      @id @default(autoincrement())
  clientId  Int?
  calories  Int
  protein   Int
  carbs     Int
  fat       Int
  meals     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  client    Client?  @relation(fields: [clientId], references: [id])
}

enum Role {
  COACH
  CLIENT
}
